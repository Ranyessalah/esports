{% extends 'backoffice/base.html.twig' %}

{% block title %}Equipes{% endblock %}

{% block content %}

<style>
/* ===== PAGE ===== */
.page-wrapper {
    min-height: calc(100vh - 200px);
    padding: 120px 60px 60px;
    background:#f9fafb;
    color:#111827;
}

/* ===== HEADER ===== */
.page-header {
    display:flex;
    justify-content:space-between;
    align-items:center;
    margin-bottom:40px;
}

.page-header h1 {
    font-size:42px;
    font-weight:800;
}

.add-btn {
    background:linear-gradient(135deg,#6366f1,#4f46e5);
    color:#fff;
    padding:14px 30px;
    border-radius:14px;
    text-decoration:none;
    font-weight:600;
    box-shadow:0 10px 25px rgba(0,0,0,.15);
}

/* ===== GRID ===== */
.team-grid {
    display:grid;
    grid-template-columns:repeat(auto-fill,minmax(300px,1fr));
    gap:30px;
}

/* ===== CARD ===== */
.team-card {
    background:#ffffff;
    border-radius:18px;
    padding:26px;
    box-shadow:0 15px 35px rgba(0,0,0,.08);
    transition:.25s;
}

.team-card:hover {
    transform:translateY(-6px);
    box-shadow:0 20px 45px rgba(0,0,0,.12);
}

/* ===== LOGO ===== */
.team-logo {
    width:90px;
    height:90px;
    border-radius:50%;
    background:#f1f5f9;
    display:flex;
    align-items:center;
    justify-content:center;
    margin:0 auto 16px;
}

/* ===== INFO ===== */
.team-name {
    text-align:center;
    font-size:20px;
    font-weight:700;
    margin-bottom:6px;
}

.team-meta {
    text-align:center;
    font-size:13px;
    color:#6b7280;
    margin-bottom:18px;
}

/* ===== DETAILS ===== */
.team-details {
    display:flex;
    justify-content:space-between;
    font-size:14px;
    margin-bottom:20px;
    color:#374151;
}

.team-details span {
    color:#6b7280;
}

/* ===== ACTIONS ===== */
.card-actions {
    display:flex;
    gap:12px;
}

.card-actions a {
    flex:1;
    text-align:center;
    padding:12px;
    border-radius:10px;
    text-decoration:none;
    font-weight:600;
}

.btn-show {
    background:#e0e7ff;
    color:#3730a3;
}

.btn-edit {
    background:#f3f4f6;
    color:#111827;
}
</style>


    <!-- HEADER -->
    <div class="page-header">
        <h1>Equipe</h1>

        <a href="{{ path('app_equipe_new_admin') }}" class="add-btn">
            ‚ûï Create Team
        </a>
    </div>

    <!-- GRID -->
    <div class="team-grid">

        {% for equipe in equipes %}

        <div class="team-card">

            <!-- LOGO -->
            <div class="team-logo">
                <img src="{{ asset(equipe.logo) }}"
                     alt="Logo √©quipe"
                     style="width:60px; height:60px; object-fit:contain;">
            </div>

            <!-- NAME -->
            <div class="team-name">
                {{ equipe.nom }}
            </div>

            <div class="team-meta">
                {{ equipe.game }} ‚Ä¢ {{ equipe.categorie }}
            </div>

            <!-- DETAILS -->
            <div class="team-details">
                <span>Coach</span>
                <strong>{{ equipe.coach.email }}</strong>
            </div>

            <!-- ACTIONS -->
            <div class="card-actions">
                <a href="{{ path('app_equipe_show_admin', {'id': equipe.id}) }}" class="btn-show">
                    üëÅ Show
                </a>

                <a href="{{ path('app_equipe_edit_admin', {'id': equipe.id}) }}" class="btn-edit">
                    ‚úè Edit
                </a>
            </div>

        </div>

        {% else %}
            <p>No teams found.</p>
        {% endfor %}

    </div>

</div>

{% endblock %}
