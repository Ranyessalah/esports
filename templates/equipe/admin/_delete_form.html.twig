<style>
.btn-delete {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 18px;
    background: linear-gradient(135deg, #ef4444, #dc2626);
    color: #fff;
    border: none;
    border-radius: 10px;
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    box-shadow: 0 8px 20px rgba(239, 68, 68, 0.25);
    transition: all 0.25s ease;
}

.btn-delete i {
    font-size: 15px;
}

.btn-delete:hover {
    background: linear-gradient(135deg, #dc2626, #b91c1c);
    transform: translateY(-2px);
    box-shadow: 0 12px 25px rgba(239, 68, 68, 0.35);
}

.btn-delete:active {
    transform: scale(0.96);
}
</style>

<form method="post"
      action="{{ path('app_equipe_delete_admin', {'id': equipe.id}) }}"
      onsubmit="return confirm('Supprimer cette équipe définitivement ?');">

    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipe.id) }}">

    <button class="btn-delete">
        <i class="fa-solid fa-trash"></i>
    </button>
</form>
