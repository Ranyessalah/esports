{{ form_start(form, {
    attr: { class: 'team-form', novalidate: 'novalidate' },
    enctype: 'multipart/form-data'
}) }}


<style>
.team-form {
    max-width:900px;
    margin:auto;
    background:linear-gradient(180deg,#0f172a,#020617);
    padding:40px;
    border-radius:20px;
    box-shadow:0 25px 60px rgba(0,0,0,.6);
    color:#fff;
}
.form-group {
    margin-bottom:22px;
}
.form-group label {
    display:block;
    margin-bottom:6px;
    font-weight:600;
    color:#e5e7eb;
}
.form-control {
    width:100%;
    padding:12px 14px;
    border-radius:12px;
    border:1px solid #1e293b;
    background:#020617;
    color:#fff;
}
.form-control:focus {
    outline:none;
    border-color:#8b5cf6;
    box-shadow:0 0 0 3px rgba(139,92,246,.25);
}
.form-error {
    margin-top:6px;
    font-size:13px;
    color:#f87171;
}
.select-multiple {
    min-height:130px;
}
.form-actions {
    display:flex;
    justify-content:flex-end;
    gap:15px;
    margin-top:30px;
}
.btn-primary {
    padding:14px 30px;
    border-radius:14px;
    font-weight:700;
    background:linear-gradient(135deg,#ec4899,#8b5cf6);
    color:#fff;
    border:none;
    cursor:pointer;
}
.btn-secondary {
    padding:14px 30px;
    border-radius:14px;
    background:#374151;
    color:#fff;
    text-decoration:none;
}
</style>

<h4 style="margin-bottom:20px;">{{ button_label|default('Créer une équipe') }}</h4>

<div class="form-error" style="margin-bottom:15px;">
    {{ form_errors(form) }}
</div>

<div class="form-group">
    {{ form_label(form.nom) }}
    {{ form_widget(form.nom, { attr:{ class:'form-control' } }) }}
    <div class="form-error">{{ form_errors(form.nom) }}</div>
</div>

<div class="form-group">
    {{ form_label(form.logoFile) }}
    {{ form_widget(form.logoFile, { attr:{ class:'form-control' } }) }}
    <div class="form-error">{{ form_errors(form.logoFile) }}</div>
</div>

<div class="form-group">
    {{ form_label(form.game) }}
    {{ form_widget(form.game, { attr:{ class:'form-control' } }) }}
    <div class="form-error">{{ form_errors(form.game) }}</div>
</div>

<div class="form-group">
    {{ form_label(form.categorie) }}
    {{ form_widget(form.categorie, { attr:{ class:'form-control' } }) }}
    <div class="form-error">{{ form_errors(form.categorie) }}</div>
</div>

<div class="form-group">
    {{ form_label(form.coach) }}
    {{ form_widget(form.coach, { attr:{ class:'form-control' } }) }}
    <div class="form-error">{{ form_errors(form.coach) }}</div>
</div>

<div class="form-group">
    {{ form_label(form.joueurs) }}
    {{ form_widget(form.joueurs, { attr:{ class:'form-control select-multiple' } }) }}
    <div class="form-error">{{ form_errors(form.joueurs) }}</div>
</div>

<div class="form-actions">
    <a href="{{ path('app_equipe_index') }}" class="btn-secondary">Annuler</a>
    <button type="submit" class="btn-primary">
        {{ button_label|default('Enregistrer') }}
    </button>
</div>

{{ form_rest(form) }}
{{ form_end(form) }}
