{{ form_start(form) }}

<div style="
    max-width:1100px;
    margin:120px auto 80px;
    background:linear-gradient(180deg,#1f2437,#161a2b);
    border-radius:16px;
    padding:40px;
    color:#fff;
">

    <h2 style="margin-bottom:30px;">
        <span style="border-left:4px solid #ff4d4f; padding-left:12px;">
            Configuration du match
        </span>
    </h2>

    <div style="display:grid; grid-template-columns:1fr 1fr; gap:30px; margin-bottom:40px;">
        <div>
            <label>Statut</label>
            {{ form_widget(form.statut, {
                attr: {
                    class: 'form-control',
                    style: 'background:#0f172a;color:#fff;border-radius:10px;padding:12px'
                }
            }) }}
        </div>

        <div>
            <label>Date et heure de fin</label>
            {{ form_widget(form.dateFinMatch, {
                attr: {
                    class: 'form-control',
                    style: 'background:#0f172a;color:#fff;border-radius:10px;padding:12px'
                }
            }) }}
        </div>
    </div>

    <h2 style="margin-bottom:30px;">
        <span style="border-left:4px solid #ff4d4f; padding-left:12px;">
            Équipes et score
        </span>
    </h2>

    <div style="display:grid; grid-template-columns:1fr 120px 1fr; align-items:center; gap:20px;">

        <!-- ÉQUIPE 1 -->
        <div style="background:#0f172a; padding:30px; border-radius:14px;">
            <h3>Équipe 1</h3>

            {{ form_widget(form.equipe1, {
                attr: {
                    style: 'margin-bottom:20px;background:#020617;color:#fff;border-radius:8px;padding:10px'
                }
            }) }}

            <div style="display:flex; justify-content:center; align-items:center; gap:20px;">
                <button type="button" onclick="dec('score1')" style="background:#ef4444;border:none;color:#fff;width:40px;height:40px;border-radius:50%;">−</button>
                {{ form_widget(form.scoreEquipe1, {
                    attr: {
                        id: 'score1',
                        style: 'width:60px;text-align:center;font-size:32px;background:none;border:none;color:#fff'
                    }
                }) }}
                <button type="button" onclick="inc('score1')" style="background:#10b981;border:none;color:#fff;width:40px;height:40px;border-radius:50%;">+</button>
            </div>
        </div>

        <!-- VS -->
        <div style="text-align:center;">
            <div style="
                background:radial-gradient(circle,#ff4d8d,#7c3aed);
                width:60px;height:60px;
                border-radius:50%;
                display:flex;
                justify-content:center;
                align-items:center;
                font-weight:700;
            ">
                VS
            </div>
        </div>

        <!-- ÉQUIPE 2 -->
        <div style="background:#0f172a; padding:30px; border-radius:14px;">
            <h3>Équipe 2</h3>

            {{ form_widget(form.equipe2, {
                attr: {
                    style: 'margin-bottom:20px;background:#020617;color:#fff;border-radius:8px;padding:10px'
                }
            }) }}

            <div style="display:flex; justify-content:center; align-items:center; gap:20px;">
                <button type="button" onclick="dec('score2')" style="background:#ef4444;border:none;color:#fff;width:40px;height:40px;border-radius:50%;">−</button>
                {{ form_widget(form.scoreEquipe2, {
                    attr: {
                        id: 'score2',
                        style: 'width:60px;text-align:center;font-size:32px;background:none;border:none;color:#fff'
                    }
                }) }}
                <button type="button" onclick="inc('score2')" style="background:#10b981;border:none;color:#fff;width:40px;height:40px;border-radius:50%;">+</button>
            </div>
        </div>

    </div>

    <div style="display:flex; justify-content:flex-end; gap:20px; margin-top:40px;">
        <a href="{{ path('app_matchs_index_admin') }}" style="
            background:#374151;
            padding:12px 30px;
            border-radius:10px;
            color:#fff;
            text-decoration:none;
        ">Annuler</a>

        <button type="submit" style="
            background:linear-gradient(90deg,#ec4899,#8b5cf6);
            padding:12px 40px;
            border:none;
            border-radius:10px;
            color:#fff;
            font-weight:600;
        ">
            Créer le match
        </button>
    </div>

</div>

{{ form_end(form) }}

<script>
function inc(id){let i=document.getElementById(id);i.value=parseInt(i.value||0)+1}
function dec(id){let i=document.getElementById(id);if(i.value>0)i.value--}
</script>
