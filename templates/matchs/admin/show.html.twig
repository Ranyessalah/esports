{% extends 'backoffice/base.html.twig' %}

{% block title %}Match #{{ match.id }}{% endblock %}

{% block content %}
<style>
.match-wrapper {
    max-width: 900px;
    margin: 40px auto;
    color: #111827;
}

/* CARD */
.match-card {
    background: #ffffff;
    border-radius: 18px;
    padding: 30px;
    box-shadow: 0 20px 40px rgba(0,0,0,.08);
    margin-bottom: 30px;
    border: 1px solid #e5e7eb;
}

/* SCORE BOX */
.score-box {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding: 40px;
    border-radius: 14px;
    background: #f9fafb;
    border: 1px solid #e5e7eb;
}

.team {
    text-align: center;
}

.team-circle {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: auto;
    font-weight: 800;
    font-size: 16px;
    background: #eef2ff;
    color: #4f46e5;
    border: 2px solid #c7d2fe;
}

.score {
    font-size: 38px;
    font-weight: 900;
    margin: 10px 0;
    color: #111827;
}

.vs {
    font-size: 14px;
    opacity: .6;
}

/* ALERT */
.alert-delay {
    margin-top: 25px;
    padding: 15px 20px;
    border-radius: 12px;
    background: #fff7ed;
    color: #92400e;
    border: 1px solid #fed7aa;
    font-weight: 500;
}

/* DETAILS */
.details {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin-top: 20px;
}

.detail-card {
    background: #f9fafb;
    padding: 20px;
    border-radius: 14px;
    border-left: 4px solid #4f46e5;
    box-shadow: 0 8px 20px rgba(0,0,0,.05);
}

.detail-card small {
    color: #6b7280;
}

.detail-card h4 {
    margin: 6px 0;
    color: #111827;
}

/* ACTIONS */
.actions {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 40px;
}

.btn {
    padding: 14px 26px;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
}

.btn-back {
    background: #e5e7eb;
    color: #111827;
}

.btn-edit {
    background: linear-gradient(135deg,#4f46e5,#9333ea);
    color: #ffffff;
}
</style>

<div class="match-wrapper">

    <!-- MATCH CARD -->
    <div class="match-card">
        <h4>Match #{{ match.id }}</h4>

        <div class="score-box">
            <div class="team">
                <div class="team-circle">
                    {{ match.equipe1.nom|slice(0,2)|upper }}
                </div>
                <h4>{{ match.equipe1.nom }}</h4>
            </div>

            <div style="text-align:center">
                <div class="score">{{ match.scoreEquipe1 ?? 0 }}</div>
                <div class="vs">VS</div>
                <div class="score">{{ match.scoreEquipe2 ?? 0 }}</div>
            </div>

            <div class="team">
                <div class="team-circle">
                    {{ match.equipe2.nom|slice(0,2)|upper }}
                </div>
                <h4>{{ match.equipe2.nom }}</h4>
            </div>
        </div>

        {% if match.dateMatch > "now"|date %}
            {% set diff = date(match.dateMatch).diff(date()) %}
            <div class="alert-delay">
                ⏳ Match commence dans <strong>{{ diff.days }} jours</strong>
            </div>
        {% endif %}
    </div>

    <!-- DETAILS -->
    <div class="match-card">
        <h4>Détails du Match</h4>

        <div class="details">
            <div class="detail-card">
                <small>Date du Match</small>
                <h4>{{ match.dateMatch|date('Y-m-d') }}</h4>
                <small>{{ match.dateMatch|date('l d F Y') }}</small>
            </div>

            <div class="detail-card">
                <small>Date de Fin</small>
                <h4>{{ match.dateFinMatch|date('Y-m-d H:i') }}</h4>
                <small>{{ match.dateFinMatch|date('l d F Y \\à H:i') }}</small>
            </div>

            <div class="detail-card">
                <small>Statut</small>
                <h4>{{ match.statut|replace({'_':' '})|title }}</h4>
                <small>État du match</small>
            </div>
        </div>
    </div>

    <!-- ACTIONS -->
    <div class="actions">
        <a href="{{ path('app_matchs_index_admin') }}" class="btn btn-back">
            ← Back to List
        </a>
        <a href="{{ path('app_matchs_edit_admin', {id: match.id}) }}" class="btn btn-edit">
            ✎ Edit Match
        </a>
    </div>

</div>
{% endblock %}
