    .main-header h1 { font-size:42px; margin-bottom:10px; background:linear-gradient(90deg,#6c63ff,#ff6584); -webkit-background-clip:text; color:transparent; }
    .main-header p { color:#b0b7c3; font-size:18px; max-width:700px; margin:0 auto; }

    .teams-grid { display:grid; grid-template-columns:repeat(auto-fill,minmax(320px,1fr)); gap:25px; margin-bottom:50px; }

    .team-card { background:#1a1f29; border-radius:12px; overflow:hidden; border:1px solid #2a313d; transition: transform 0.3s, box-shadow 0.3s; display:flex; flex-direction:column; }
    .team-card:hover { transform:translateY(-8px); box-shadow:0 12px 24px rgba(0,0,0,0.4); border-color:#6c63ff; }

    .team-header { display:flex; justify-content:space-between; align-items:center; padding:20px; background:#252b36; border-bottom:1px solid #2a313d; }
    .team-game { display:flex; align-items:center; gap:10px; }
    .game-icon { width:40px; height:40px; border-radius:50%; background:linear-gradient(135deg,#6c63ff,#ff6584); display:flex; align-items:center; justify-content:center; font-size:20px; }
    .game-info h3 { font-size:18px; margin-bottom:4px; }
    .game-info .game-type { font-size:14px; color:#b0b7c3; font-weight:500; }
    .team-level { background:#6c63ff; color:white; padding:6px 12px; border-radius:20px; font-size:12px; font-weight:700; text-transform:uppercase; letter-spacing:0.5px; }

    .team-content { padding:20px; text-align:center; }
    .team-name { font-size:24px; font-weight:700; margin-bottom:15px; color:#f0f0f0; }

    .score-box { margin:20px 0; display:flex; justify-content:center; gap:25px; align-items:center; }
    .team-score { display:flex; flex-direction:column; align-items:center; }
    .team-score .team-name { font-size:16px; color:#6c63ff; font-weight:600; margin-bottom:5px; }
    .team-score .score-number { font-size:24px; color:white; font-weight:700; }
    .vs-text { font-size:18px; color:#b0b7c3; font-weight:700; }

    .meta { display:flex; justify-content:space-around; font-size:14px; color:#b0b7c3; margin-bottom:15px; }
    .meta span { display:block; font-weight:600; color:#6c63ff; margin-bottom:3px; }

    .team-actions { display:flex; gap:10px; margin-top:10px; }
    .team-actions a { flex:1; padding:12px 0; border-radius:8px; font-weight:600; text-decoration:none; display:block; text-align:center; transition:all 0.3s; }
    .team-actions a.btn-show { background:#252b36; color:white; border:1px solid #3a4252; }
    .team-actions a.btn-show:hover { background:#6c63ff; border-color:#6c63ff; }
    .team-actions a.btn-edit { background:transparent; color:#6c63ff; border:1px solid #6c63ff; }
    .team-actions a.btn-edit:hover { background:#6c63ff; color:white; }

    .add-team-container { text-align:center; margin-bottom:50px; }
    .btn-add-team { background:transparent; color:#6c63ff; border:2px dashed #6c63ff; padding:16px 40px; border-radius:10px; font-size:18px; font-weight:700; text-decoration:none; display:inline-block; transition:all 0.3s; }
    .btn-add-team:hover { background: rgba(108,99,255,0.1); border-style:solid; }

    @media(max-width:992px){ .teams-grid{grid-template-columns:repeat(auto-fill,minmax(300px,1fr));} }
    @media(max-width:768px){ .teams-grid{grid-template-columns:1fr;} }
</style>

<main class="container">
    <div class="main-header">
        <h1>Nos Matches</h1>
        <p>Gérez vos équipes, consultez les scores et organisez vos matchs professionnels.</p>
    </div>

    <div class="teams-grid">
        {% for match in matchs %}
        <div class="team-card">
            <div class="team-header">
                <div class="team-game">
                    <div class="game-icon">
                        <i class="fas fa-futbol"></i>
                    </div>
                    <div class="game-info">
                        <h3>{{ match.equipe1.nom }} VS {{ match.equipe2.nom }}</h3>
                        <p class="game-type">{{ match.statut }}</p>
                    </div>
                </div>
                <div class="team-level">{{ match.dateMatch|date('d/m/Y') }}</div>
            </div>

            <div class="team-content">
                <div class="score-box">
                    <div class="team-score">
                        <div class="team-name">{{ match.equipe1.nom }}</div>
                        <div class="score-number">{{ match.scoreEquipe1 ?? 0 }}</div>
                    </div>

                    <span class="vs-text">VS</span>

                    <div class="team-score">
                        <div class="team-name">{{ match.equipe2.nom }}</div>
                        <div class="score-number">{{ match.scoreEquipe2 ?? 0 }}</div>
                    </div>
                </div>

                <div class="meta">
                    <div><span>Heure</span>{{ match.dateMatch|date('H:i') }}</div>
                    <div><span>Statut</span>{{ match.statut }}</div>
                </div>

                <div class="team-actions">
                    <a href="{{ path('app_matchs_show', {'id': match.id}) }}" class="btn-show"><i class="fas fa-eye"></i> Show</a>
                    <a href="{{ path('app_matchs_edit', {'id': match.id}) }}" class="btn-edit"><i class="fas fa-edit"></i> Edit</a>
                </div>
            </div>
        </div>
        {% else %}
            <p>Aucun match trouvé.</p>
        {% endfor %}
    </div>

    <div class="add-team-container">
        <a href="{{ path('app_matchs_new') }}" class="btn-add-team"><i class="fas fa-plus-circle"></i> Ajouter un match</a>
    </div>
</main>

{% endblock %}
