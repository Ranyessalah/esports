{% extends 'base.html.twig' %}

{% block title %}List Matches{% endblock %}

{% block body %}

<style>
.page {
    min-height: calc(100vh - 300px);
    padding: 120px 60px;
    color: #fff;
}
.header {
    display:flex;
    justify-content:space-between;
    align-items:center;
    margin-bottom:40px;
}
.header h2 span {
    border-left:4px solid #a855f7;
    padding-left:12px;
}
.add-btn {
    background: linear-gradient(90deg,#a855f7,#a855A2);
    color:#fff;
    padding:12px 26px;
    border-radius:12px;
    text-decoration:none;
    font-weight:600;
}
.cards {
    display:flex;
    gap:30px;
    flex-wrap:wrap;
}
.card {
    width:390px;
    background: linear-gradient(180deg,#2a3547,#1b2433);
    border-radius:18px;
    padding:22px;
    box-shadow:0 20px 40px rgba(0,0,0,.45);
}
.card-top {
    display:flex;
    justify-content:space-between;
    align-items:center;
    margin-bottom:18px;
}
.badge {
    background:#6c4c3b;
    padding:4px 12px;
    border-radius:20px;
    font-size:12px;
    color:orange;
}
.statut {
    font-size:13px;
    font-weight:600;
}
.planifie { color:#f1c40f; }
.encours { color:#2ecc71; }
.termine { color:#9b59b6; }
.score-box {
    background:#0b1220;
    border-radius:14px;
    padding:15px;
    margin-bottom:18px;
}

.score-line {
    display:flex;
    align-items:center;
    justify-content:center;
    gap:18px;
}

.team-name {
    font-size:14px;
    font-weight:600;
    color:#e5e7eb;
    min-width:110px;
    text-align:center;
}

.score-number {
    font-size:34px;
    font-weight:800;
    color:#ffffff;
}

.vs-text {
    font-size:14px;
    opacity:.5;
    margin:0 4px;
}

.meta {
    display:flex;
    justify-content:space-between;
    font-size:13px;
    margin-bottom:16px;
}
.meta span {
    display:block;
    opacity:.5;
}
.actions {
    display:flex;
    gap:10px;
}
.actions a {
    flex:1;
    text-align:center;
    padding:10px;
    border-radius:10px;
    text-decoration:none;
    font-weight:600;
}
.show { background:#3b82f6; color:#fff; }
.edit { background:#374151; color:#fff; }
</style>

<div class="page">

    <div class="header">
        <h2><span>List Matches</span></h2>
        <a href="{{ path('app_matchs_new') }}" class="add-btn">‚ûï</a>
    </div>

    <div class="cards">

        {% for match in matchs %}

        <div class="card">

            <div class="card-top">
                <strong>Match #{{ match.id }}</strong>

                <span class="statut
                    {% if match.statut == 'En Cours' %}encours
                    {% elseif match.statut == 'Termin√©' %}termine
                    {% else %}planifie{% endif %}
                ">
                    {{ match.statut }}
                </span>
            </div>

            <!-- SCORE LINE -->
           <div class="score-box">
    <div class="score-line">
        <span class="team-name">{{ match.equipe1.nom }}</span>

        <span class="score-number">{{ match.scoreEquipe1 ?? 0 }}</span>
        <span class="vs-text">VS</span>
        <span class="score-number">{{ match.scoreEquipe2 ?? 0 }}</span>

        <span class="team-name">{{ match.equipe2.nom }}</span>
    </div>
</div>


            <!-- META -->
            <div class="meta">
                <div>
                    <span>Date</span>
                    {{ match.dateMatch|date('Y-m-d') }}
                </div>
                <div>
                    <span>Heure</span>
                    {{ match.dateMatch|date('H:i') }}
                </div>
                <div>
                    <span>Statut</span>
                    {{ match.statut }}
                </div>
            </div>

            <!-- ACTIONS -->
            <div class="actions">
                <a href="{{ path('app_matchs_show', {'id': match.id}) }}" class="show">üëÅ Show</a>
                <a href="{{ path('app_matchs_edit', {'id': match.id}) }}" class="edit">‚úè Edit</a>
            </div>

        </div>

        {% else %}
            <p>Aucun match trouv√©.</p>
        {% endfor %}

    </div>
</div>

{% endblock %}
