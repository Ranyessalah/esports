{% extends 'base.html.twig' %}

{% block title %}Matchs{% endblock %}

{% block body %}
    <h1>Matchs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ match.id }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ match.statut }}</td>
            </tr>
            <tr>
                <th>DateMatch</th>
                <td>{{ match.dateMatch ? match.dateMatch|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateFinMatch</th>
                <td>{{ match.dateFinMatch ? match.dateFinMatch|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ScoreEquipe1</th>
                <td>{{ match.scoreEquipe1 }}</td>
            </tr>
            <tr>
                <th>ScoreEquipe2</th>
                <td>{{ match.scoreEquipe2 }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_matchs_index') }}">back to list</a>

    <a href="{{ path('app_matchs_edit', {'id': match.id}) }}">edit</a>

    {{ include('matchs/_delete_form.html.twig') }}
{% endblock %}
