{% extends 'base.html.twig' %}

{% block title %}Match #{{ match.id }}{% endblock %}

{% block body %}
<style>
.match-wrapper {
    max-width: 900px;
    margin: 40px auto;
    color: #fff;
}
.match-card {
    background: linear-gradient(180deg, #1c2333, #141a27);
    border-radius: 18px;
    padding: 30px;
    box-shadow: 0 20px 40px rgba(0,0,0,.5);
    margin-bottom: 30px;
}
.score-box {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding: 40px;
    border-radius: 14px;
    background: rgba(255,255,255,.03);
}
.team {
    text-align: center;
}
.team-circle {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    background: #2d3648;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: auto;
    font-weight: bold;
    font-size: 15px;
    color: #78167d;
}
.score {
    font-size: 36px;
    font-weight: 900;
    margin: 10px 0;
}
.vs {
    font-size: 15px;
    opacity: .7;
}
.alert-delay {
    margin-top: 25px;
    padding: 15px 20px;
    border-radius: 10px;
    background: rgba(255,185,66,.12);
    color: #961072;
}
.details {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
}
.detail-card {
    background: #1a2130;
    padding: 20px;
    border-radius: 14px;
    border-left: 4px solid #850685;
}
.detail-card small {
    opacity: .6;
}
.actions {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 40px;
}
.btn {
    padding: 14px 26px;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
}
.btn-back {
    background: #3a4255;
    color: #fff;
}
.btn-edit {
    background: linear-gradient(135deg,#ff9f1a,#ffb942);
    color: #000;
}
</style>

<br>
<br>
<br>
<div class="match-wrapper">

    <!-- MATCH CARD -->
    <div class="match-card">
        <h4>Match #{{ match.id }}</h4>

        <div class="score-box">
            <div class="team">
                <div class="team-circle">
                    {{ match.equipe1.nom|slice(0,2)|upper }}
                </div>
                <h4>{{ match.equipe1.nom }}</h4>
            </div>

            <div style="text-align:center">
                <div class="score">{{ match.scoreEquipe1 ?? 0 }}</div>
                <div class="vs">VS</div>
                <div class="score">{{ match.scoreEquipe2 ?? 0 }}</div>
            </div>

            <div class="team">
                <div class="team-circle">
                    {{ match.equipe2.nom|slice(0,2)|upper }}
                </div>
                <h4>{{ match.equipe2.nom }}</h4>
            </div>
        </div>

        {% if match.dateMatch > "now"|date %}
            {% set diff = date(match.dateMatch).diff(date()) %}
            <div class="alert-delay">
                ⏳ Match commence dans : <strong>{{ diff.days }} jours</strong>
            </div>
        {% endif %}
    </div>

    <!-- DETAILS -->
    <div class="match-card">
        <h4>Détails du Match</h4>
<center>
        <div class="details">
            <div class="detail-card">
                <small>Date du Match</small>
                <h4>{{ match.dateMatch|date('Y-m-d') }}</h4>
                <small>{{ match.dateMatch|date('l d F Y') }}</small>
            </div>

            <div class="detail-card">
                <small>Date de Fin</small>
                <h4>{{ match.dateFinMatch|date('Y-m-d H:i') }}</h4>
                <small>{{ match.dateFinMatch|date('l d F Y \\à H:i') }}</small>
            </div>

            <div class="detail-card">
                <small>Statut</small>
                <h4>{{ match.statut|replace({'_':' '})|title }}</h4>
                <small>État du match</small>
            </div>

        </center>
        </div>
    </div>

    <!-- ACTIONS -->
    <div class="actions">
        <a href="{{ path('app_matchs_index') }}" class="btn btn-back">← Back to List</a>
        <a href="{{ path('app_matchs_edit', {id: match.id}) }}" class="btn btn-edit">✎ Edit Match</a>
    </div>

</div>
{% endblock %}
