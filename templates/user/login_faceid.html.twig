<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Connexion Face ID | ClutchX</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap-lib/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/font-awesome-lib/icon/font-awesome.min.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        *, *::before, *::after { box-sizing: border-box; }

        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Inter', sans-serif;
            overflow-x: hidden;
        }

        .bg-video {
            position: fixed;
            inset: 0;
            z-index: 0;
        }
        .bg-video video {
            width: 100%; height: 100%;
            object-fit: cover;
        }
        .bg-video .overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(160deg, rgba(16,10,46,0.88) 0%, rgba(30,10,60,0.92) 100%);
        }

        .login-page {
            position: relative;
            z-index: 2;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 40px 16px;
        }

        .login-card {
            width: 100%;
            max-width: 480px;
            background: rgba(255,255,255,0.06);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 20px;
            padding: 36px 32px 28px;
            color: #fff;
            box-shadow: 0 24px 64px rgba(0,0,0,0.4);
        }

        .login-header {
            text-align: center;
            margin-bottom: 28px;
        }
        .login-header .icon-circle {
            width: 64px; height: 64px;
            background: linear-gradient(135deg, #7c3aed, #a855f7);
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 14px;
            font-size: 1.6rem;
        }
        .login-header h2 {
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0 0 4px;
        }
        .login-header p {
            font-size: 0.85rem;
            color: rgba(255,255,255,0.55);
            margin: 0;
        }

        .field-group {
            margin-bottom: 18px;
        }
        .field-group label {
            display: block;
            font-size: 0.78rem;
            font-weight: 500;
            color: rgba(255,255,255,0.7);
            margin-bottom: 6px;
            letter-spacing: 0.02em;
            text-transform: uppercase;
        }
        .field-group input[type="text"],
        .field-group input[type="email"],
        .field-group input[type="file"] {
            width: 100%;
            padding: 11px 14px;
            border-radius: 10px;
            border: 1.5px solid rgba(255,255,255,0.12);
            background: rgba(255,255,255,0.07);
            color: #fff;
            font-size: 0.92rem;
            font-family: inherit;
            outline: none;
            transition: border-color 0.25s, box-shadow 0.25s, background 0.25s;
        }
        .field-group input::placeholder {
            color: rgba(255,255,255,0.3);
        }
        .field-group input:focus {
            border-color: #a855f7;
            background: rgba(255,255,255,0.1);
            box-shadow: 0 0 0 3px rgba(168,85,247,0.15);
        }

        .error-box {
            display: flex;
            align-items: flex-start;
            gap: 8px;
            margin-bottom: 18px;
            padding: 12px 16px;
            border-radius: 10px;
            background: rgba(239,68,68,0.12);
            border: 1px solid rgba(239,68,68,0.25);
        }
        .error-box i { color: #f87171; margin-top: 2px; }
        .error-box span { color: #fca5a5; font-size: 0.85rem; line-height: 1.4; }

        .btn-submit {
            width: 100%;
            padding: 13px;
            border: none;
            border-radius: 12px;
            background: linear-gradient(135deg, #7c3aed, #a855f7);
            color: #fff;
            font-size: 0.95rem;
            font-weight: 600;
            font-family: inherit;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 32px rgba(124,58,237,0.35);
        }
        .btn-submit:active { transform: translateY(0); }

        /* Camera section */
        .camera-section {
            margin-bottom: 20px;
        }

        .tab-buttons {
            display: flex;
            gap: 8px;
            margin-bottom: 16px;
        }
        .tab-btn {
            flex: 1;
            padding: 10px;
            border: 1.5px solid rgba(255,255,255,0.12);
            border-radius: 10px;
            background: rgba(255,255,255,0.04);
            color: rgba(255,255,255,0.6);
            font-size: 0.82rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.25s;
            font-family: inherit;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
        }
        .tab-btn:hover {
            background: rgba(255,255,255,0.08);
        }
        .tab-btn.active {
            border-color: #a855f7;
            background: rgba(168,85,247,0.15);
            color: #e9d5ff;
        }

        .tab-content { display: none; }
        .tab-content.active { display: block; }

        .camera-container {
            position: relative;
            border-radius: 12px;
            overflow: hidden;
            background: #000;
            margin-bottom: 12px;
        }
        .camera-container video,
        .camera-container canvas {
            width: 100%;
            display: block;
            border-radius: 12px;
        }
        .camera-container canvas { display: none; }

        .camera-overlay {
            position: absolute;
            inset: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            pointer-events: none;
        }
        .face-guide {
            width: 180px;
            height: 220px;
            border: 2px dashed rgba(168,85,247,0.5);
            border-radius: 50%;
            position: relative;
        }
        .face-guide-text {
            margin-top: 12px;
            font-size: 0.75rem;
            color: rgba(255,255,255,0.5);
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .btn-capture {
            width: 100%;
            padding: 11px;
            border: 1.5px solid rgba(168,85,247,0.4);
            border-radius: 10px;
            background: rgba(168,85,247,0.1);
            color: #e9d5ff;
            font-size: 0.88rem;
            font-weight: 500;
            cursor: pointer;
            font-family: inherit;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }
        .btn-capture:hover {
            background: rgba(168,85,247,0.2);
            border-color: #a855f7;
        }

        .capture-status {
            text-align: center;
            margin-top: 10px;
            font-size: 0.82rem;
        }
        .capture-status.success { color: #86efac; }
        .capture-status.error { color: #fca5a5; }

        .divider {
            display: flex;
            align-items: center;
            gap: 12px;
            margin: 18px 0;
            color: rgba(255,255,255,0.35);
            font-size: 0.78rem;
            text-transform: uppercase;
            letter-spacing: 0.06em;
        }
        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: rgba(255,255,255,0.12);
        }

        .login-footer {
            text-align: center;
            margin-top: 20px;
            font-size: 0.84rem;
            color: rgba(255,255,255,0.5);
        }
        .login-footer a {
            color: #c084fc;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s;
        }
        .login-footer a:hover { color: #e9d5ff; }

        @media (max-width: 480px) {
            .login-card { padding: 28px 20px 22px; border-radius: 16px; }
            .tab-buttons { flex-direction: column; }
        }
    </style>
</head>

<body>

<div class="bg-video">
    <video autoplay loop muted playsinline>
        <source src="{{ asset('assets/images/index/header-video.mp4') }}" type="video/mp4">
    </video>
    <div class="overlay"></div>
</div>

<div class="login-page">
    <div class="login-card">

        <div class="login-header">
            <div class="icon-circle">
                <i class="fa fa-camera" style="color:#fff"></i>
            </div>
            <h2>Connexion Face ID</h2>
            <p>Authentifiez-vous avec la reconnaissance faciale</p>
        </div>

        {% if error %}
            <div class="error-box">
                <i class="fa fa-exclamation-triangle"></i>
                <span>{{ error }}</span>
            </div>
        {% endif %}

        <form method="post" action="{{ path('app_login_faceid') }}" enctype="multipart/form-data" id="faceLoginForm">

            {# Tabs: Camera / Upload #}
            <div class="camera-section">
                {# Camera #}
                <div id="tab-camera">
                    <div class="camera-container">
                        <video id="cameraVideo" autoplay playsinline></video>
                        <canvas id="cameraCanvas"></canvas>
                        <div class="camera-overlay">
                            <div class="face-guide"></div>
                            <span class="face-guide-text">Placez votre visage ici</span>
                        </div>
                    </div>
                    <button type="button" class="btn-capture" id="captureBtn" onclick="capturePhoto()">
                        <i class="fa fa-camera"></i> Capturer ma photo
                    </button>
                    <div id="captureStatus" class="capture-status"></div>
                </div>
            </div>

            <input type="hidden" name="face_base64" id="faceBase64" value="">

            <button type="submit" class="btn-submit">
                <i class="fa fa-shield" style="margin-right:6px"></i> S'authentifier par Face ID
            </button>
        </form>

        <div class="divider">ou</div>

        <div class="login-footer">
            <a href="{{ path('app_login') }}">
                <i class="fa fa-arrow-left"></i> Connexion classique (mot de passe)
            </a>
        </div>

    </div>
</div>

<script>
let stream = null;

// Tab switching
function switchTab(tab) {
    document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
    document.querySelectorAll('.tab-content').forEach(tc => tc.classList.remove('active'));

    if (tab === 'camera') {
        document.querySelector('.tab-btn:nth-child(1)').classList.add('active');
        document.getElementById('tab-camera').classList.add('active');
        startCamera();
        // Clear file input when switching to camera
        document.getElementById('face_image').value = '';
    } else {
        document.querySelector('.tab-btn:nth-child(2)').classList.add('active');
        document.getElementById('tab-upload').classList.add('active');
        stopCamera();
        // Clear base64 when switching to upload
        document.getElementById('faceBase64').value = '';
        document.getElementById('captureStatus').textContent = '';
    }
}

// Start camera
async function startCamera() {
    try {
        stream = await navigator.mediaDevices.getUserMedia({
            video: { facingMode: 'user', width: { ideal: 640 }, height: { ideal: 480 } }
        });
        const video = document.getElementById('cameraVideo');
        video.srcObject = stream;
        video.style.display = 'block';
        document.getElementById('cameraCanvas').style.display = 'none';
    } catch (err) {
        document.getElementById('captureStatus').textContent = 'Impossible d\'accéder à la caméra : ' + err.message;
        document.getElementById('captureStatus').className = 'capture-status error';
    }
}

// Stop camera
function stopCamera() {
    if (stream) {
        stream.getTracks().forEach(track => track.stop());
        stream = null;
    }
}

// Capture photo from camera
function capturePhoto() {
    const video = document.getElementById('cameraVideo');
    const canvas = document.getElementById('cameraCanvas');

    if (!video.srcObject) {
        document.getElementById('captureStatus').textContent = 'La caméra n\'est pas active.';
        document.getElementById('captureStatus').className = 'capture-status error';
        return;
    }

    canvas.width = video.videoWidth;
    canvas.height = video.videoHeight;
    const ctx = canvas.getContext('2d');
    ctx.drawImage(video, 0, 0);

    // Show captured frame
    video.style.display = 'none';
    canvas.style.display = 'block';

    // Set base64 value
    const dataUrl = canvas.toDataURL('image/jpeg', 0.9);
    document.getElementById('faceBase64').value = dataUrl;

    // Clear file input
    document.getElementById('face_image').value = '';

    document.getElementById('captureStatus').innerHTML = '<i class="fa fa-check-circle"></i> Photo capturée avec succès !';
    document.getElementById('captureStatus').className = 'capture-status success';

    // Update capture button
    document.getElementById('captureBtn').innerHTML = '<i class="fa fa-refresh"></i> Recapturer';
}

// Handle form submit - clear base64 if a file is uploaded
document.getElementById('faceLoginForm').addEventListener('submit', function() {
    const fileInput = document.getElementById('face_image');
    if (fileInput.files.length > 0) {
        document.getElementById('faceBase64').value = '';
    }
});

// Auto-start camera on page load
document.addEventListener('DOMContentLoaded', function() {
    startCamera();
});

// Cleanup on page leave
window.addEventListener('beforeunload', function() {
    stopCamera();
});
</script>

</body>
</html>
