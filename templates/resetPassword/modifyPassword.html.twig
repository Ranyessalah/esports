<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Modifier le mot de passe | ClutchX</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap-lib/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/font-awesome-lib/icon/font-awesome.min.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        *, *::before, *::after { box-sizing: border-box; }

        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Inter', sans-serif;
            overflow-x: hidden;
        }

        /* ── VIDEO BG ── */
        .bg-video {
            position: fixed;
            inset: 0;
            z-index: 0;
        }
        .bg-video video {
            width: 100%; height: 100%;
            object-fit: cover;
        }
        .bg-video .overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(160deg, rgba(16,10,46,0.88) 0%, rgba(30,10,60,0.92) 100%);
        }

        /* ── PAGE ── */
        .login-page {
            position: relative;
            z-index: 2;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 40px 16px;
        }

        /* ── CARD ── */
        .login-card {
            width: 100%;
            max-width: 440px;
            background: rgba(255,255,255,0.06);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 20px;
            padding: 36px 32px 28px;
            color: #fff;
            box-shadow: 0 24px 64px rgba(0,0,0,0.4);
        }

        /* ── HEADER ── */
        .login-header {
            text-align: center;
            margin-bottom: 28px;
        }
        .login-header .icon-circle {
            width: 56px; height: 56px;
            background: linear-gradient(135deg, #7c3aed, #a855f7);
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 14px;
            font-size: 1.4rem;
        }
        .login-header h2 {
            font-size: 1.5rem;
            font-weight: 700;
            margin: 0 0 4px;
            letter-spacing: -0.02em;
        }
        .login-header p {
            font-size: 0.85rem;
            color: rgba(255,255,255,0.55);
            margin: 0;
        }

        /* ── FORM GROUP ── */
        .field-group {
            margin-bottom: 18px;
            position: relative;
        }
        .field-group label {
            display: block;
            font-size: 0.78rem;
            font-weight: 500;
            color: rgba(255,255,255,0.7);
            margin-bottom: 6px;
            letter-spacing: 0.02em;
            text-transform: uppercase;
        }
        .field-group input[type="text"],
        .field-group input[type="password"] {
            width: 100%;
            padding: 11px 14px;
            border-radius: 10px;
            border: 1.5px solid rgba(255,255,255,0.12);
            background: rgba(255,255,255,0.07);
            color: #fff;
            font-size: 0.92rem;
            font-family: inherit;
            outline: none;
            transition: border-color 0.25s, box-shadow 0.25s, background 0.25s;
        }
        .field-group input::placeholder {
            color: rgba(255,255,255,0.3);
        }
        .field-group input:focus {
            border-color: #a855f7;
            background: rgba(255,255,255,0.1);
            box-shadow: 0 0 0 3px rgba(168,85,247,0.15);
        }

        /* ── ERROR STATE ── */
        .field-group.has-error input {
            border-color: #ef4444 !important;
            background: rgba(239,68,68,0.06);
        }
        .field-group.has-error input:focus {
            box-shadow: 0 0 0 3px rgba(239,68,68,0.12);
        }

        .field-error {
            display: none;
            align-items: flex-start;
            gap: 6px;
            margin-top: 6px;
            padding: 7px 10px;
            border-radius: 8px;
            background: rgba(239,68,68,0.1);
            border: 1px solid rgba(239,68,68,0.2);
        }
        .field-error.show {
            display: flex;
        }
        .field-error i {
            color: #f87171;
            font-size: 0.72rem;
            margin-top: 2px;
            flex-shrink: 0;
        }
        .field-error span {
            color: #fca5a5;
            font-size: 0.78rem;
            line-height: 1.4;
        }

        /* ── PASSWORD RULES ── */
        .password-rules-toggle {
            display: flex;
            align-items: center;
            gap: 6px;
            margin-bottom: 16px;
            font-size: 0.8rem;
            color: rgba(255,255,255,0.5);
            cursor: pointer;
            transition: color 0.2s;
        }
        .password-rules-toggle:hover {
            color: #c084fc;
        }
        .password-rules-toggle svg {
            flex-shrink: 0;
        }

        .password-rules {
            display: none;
            margin-bottom: 16px;
            padding: 12px 16px;
            border-radius: 10px;
            background: rgba(255,255,255,0.04);
            border: 1px solid rgba(255,255,255,0.08);
            position: relative;
        }
        .password-rules.show {
            display: block;
        }
        .password-rules .close-rules {
            position: absolute;
            top: 8px;
            right: 10px;
            cursor: pointer;
            color: rgba(255,255,255,0.4);
            transition: color 0.2s;
        }
        .password-rules .close-rules:hover {
            color: #f87171;
        }
        .password-rules ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        .password-rules ul li {
            font-size: 0.78rem;
            color: rgba(255,255,255,0.6);
            padding: 3px 0;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .password-rules ul li::before {
            content: '\f00c';
            font-family: FontAwesome;
            font-size: 0.65rem;
            color: rgba(255,255,255,0.25);
        }

        /* ── STRENGTH BAR ── */
        .strength-container {
            margin-top: 8px;
            display: none;
        }
        .strength-container.show {
            display: block;
        }
        .strength-label {
            font-size: 0.75rem;
            color: rgba(255,255,255,0.5);
            margin-bottom: 4px;
        }
        .strength-label .strength-text {
            font-weight: 600;
        }
        .strength-bar-wrapper {
            width: 100%;
            height: 4px;
            background: rgba(255,255,255,0.08);
            border-radius: 4px;
            overflow: hidden;
        }
        #strength-bar {
            width: 0;
            height: 100%;
            transition: width 0.3s, background-color 0.3s;
            border-radius: 4px;
        }

        /* ── CHECKBOX ── */
        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 22px;
            padding: 10px 14px;
            border-radius: 10px;
            background: rgba(255,255,255,0.04);
            border: 1px solid rgba(255,255,255,0.08);
            cursor: pointer;
            transition: background 0.2s;
        }
        .checkbox-group:hover {
            background: rgba(255,255,255,0.07);
        }
        .checkbox-group input[type="checkbox"] {
            width: 18px; height: 18px;
            accent-color: #a855f7;
            cursor: pointer;
            flex-shrink: 0;
        }
        .checkbox-group label {
            font-size: 0.88rem;
            color: rgba(255,255,255,0.8);
            cursor: pointer;
            margin: 0;
            text-transform: none;
            letter-spacing: 0;
            font-weight: 400;
        }

        /* ── SUBMIT ── */
        .btn-login {
            width: 100%;
            padding: 13px;
            border: none;
            border-radius: 12px;
            background: linear-gradient(135deg, #7c3aed, #a855f7);
            color: #fff;
            font-size: 0.95rem;
            font-weight: 600;
            font-family: inherit;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            letter-spacing: 0.01em;
        }
        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 32px rgba(124,58,237,0.35);
        }
        .btn-login:active {
            transform: translateY(0);
        }

        /* ── RESPONSIVE ── */
        @media (max-width: 480px) {
            .login-card {
                padding: 28px 20px 22px;
                border-radius: 16px;
            }
        }
    </style>
</head>

<body>

<div class="bg-video">
    <video autoplay loop muted playsinline>
        <source src="{{ asset('assets/images/index/header-video.mp4') }}" type="video/mp4">
    </video>
    <div class="overlay"></div>
</div>

<div class="login-page">
    <div class="login-card">

        <div class="login-header">
            <div class="icon-circle">
                <i class="fa fa-key" style="color:#fff"></i>
            </div>
            <h2>Modifier le mot de passe</h2>
            <p>Créez un nouveau mot de passe sécurisé</p>
        </div>

        <form id="myform" action="{{ path('app_modifypassword') }}" method="POST" novalidate>

            {% if error is defined and error %}
                <div style="display:flex;align-items:flex-start;gap:6px;margin-bottom:18px;padding:7px 10px;border-radius:8px;background:rgba(239,68,68,0.1);border:1px solid rgba(239,68,68,0.2);">
                    <i class="fa fa-exclamation-triangle" style="color:#f87171;font-size:0.72rem;margin-top:2px;"></i>
                    <span style="color:#fca5a5;font-size:0.78rem;line-height:1.4;">{{ error }}</span>
                </div>
            {% endif %}

            {# ── Password ── #}
            <div class="field-group" id="passwordGroup">
                <label for="password">Nouveau mot de passe</label>
                <input type="password" id="password" name="password" placeholder="Entrez votre nouveau mot de passe" autofocus>

                <div class="strength-container" id="strengthContainer">
                    <div class="strength-label">
                        Force : <span class="strength-text" id="strengthText"></span>
                    </div>
                    <div class="strength-bar-wrapper">
                        <div id="strength-bar"></div>
                    </div>
                </div>

                <div class="field-error" id="passwordError">
                    <i class="fa fa-exclamation-triangle"></i>
                    <span>Le champ <b>Mot de passe</b> est requis.</span>
                </div>

                <div class="field-error" id="passwordRegex">
                    <i class="fa fa-exclamation-triangle"></i>
                    <span><b>Le mot de passe</b> est invalide, veuillez respecter les normes ci-dessous.</span>
                </div>
            </div>

            {# ── Password Rules ── #}
            <div class="password-rules-toggle" id="rulesToggle">
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                    <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z"/>
                </svg>
                Normes de mot de passe
            </div>

            <div class="password-rules" id="passwordRules">
                <div class="close-rules" id="closeRules">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                    </svg>
                </div>
                <ul>
                    <li>Au moins 8 caractères</li>
                    <li>Une lettre minuscule</li>
                    <li>Une lettre majuscule</li>
                    <li>Un numéro</li>
                </ul>
            </div>

            {# ── Confirm Password ── #}
            <div class="field-group" id="confirmGroup">
                <label for="confirmpassword">Confirmer le mot de passe</label>
                <input type="password" id="confirmpassword" name="confirmpassword" placeholder="Confirmez votre mot de passe">

                <div class="field-error" id="confirmpasswordError">
                    <i class="fa fa-exclamation-triangle"></i>
                    <span>Le champ <b>Confirmer le mot de passe</b> est requis.</span>
                </div>

                <div class="field-error" id="passwordmatchError">
                    <i class="fa fa-exclamation-triangle"></i>
                    <span>Les <b>mots de passe</b> ne correspondent pas.</span>
                </div>
            </div>

            {# ── Show Password ── #}
            <div class="checkbox-group">
                <input type="checkbox" id="displayPassword">
                <label for="displayPassword">Afficher les mots de passe</label>
            </div>

            <button type="submit" class="btn-login">
                <i class="fa fa-refresh" style="margin-right:6px"></i> Réinitialiser le mot de passe
            </button>
        </form>

    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {

    // ── Elements ──
    var myForm = document.getElementById('myform');
    var passwordInput = document.getElementById('password');
    var confirmpasswordInput = document.getElementById('confirmpassword');
    var passwordGroup = document.getElementById('passwordGroup');
    var confirmGroup = document.getElementById('confirmGroup');
    var passwordError = document.getElementById('passwordError');
    var passwordRegex = document.getElementById('passwordRegex');
    var confirmpasswordError = document.getElementById('confirmpasswordError');
    var passwordmatchError = document.getElementById('passwordmatchError');
    var strengthContainer = document.getElementById('strengthContainer');
    var strengthBar = document.getElementById('strength-bar');
    var strengthText = document.getElementById('strengthText');
    var passwordRules = document.getElementById('passwordRules');
    var myRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{8,}$/;

    // ── Password Rules Toggle ──
    document.getElementById('rulesToggle').addEventListener('click', function() {
        passwordRules.classList.add('show');
    });
    document.getElementById('closeRules').addEventListener('click', function() {
        passwordRules.classList.remove('show');
    });

    // ── Show/Hide Password ──
    document.getElementById('displayPassword').addEventListener('change', function() {
        var type = this.checked ? 'text' : 'password';
        passwordInput.type = type;
        confirmpasswordInput.type = type;
    });

    // ── Clear errors on input ──
    passwordInput.addEventListener('input', function() {
        passwordError.classList.remove('show');
        passwordRegex.classList.remove('show');
        passwordGroup.classList.remove('has-error');
    });
    confirmpasswordInput.addEventListener('input', function() {
        confirmpasswordError.classList.remove('show');
        passwordmatchError.classList.remove('show');
        confirmGroup.classList.remove('has-error');
    });

    // ── Form Validation ──
    myForm.addEventListener('submit', function(e) {
        var valid = true;

        // Password validation
        if (passwordInput.value.trim() === '') {
            passwordError.classList.add('show');
            passwordRegex.classList.remove('show');
            passwordGroup.classList.add('has-error');
            valid = false;
        } else if (!myRegex.test(passwordInput.value)) {
            passwordRegex.classList.add('show');
            passwordError.classList.remove('show');
            passwordGroup.classList.add('has-error');
            valid = false;
        } else {
            passwordError.classList.remove('show');
            passwordRegex.classList.remove('show');
            passwordGroup.classList.remove('has-error');
        }

        // Confirm password validation
        if (confirmpasswordInput.value.trim() === '') {
            confirmpasswordError.classList.add('show');
            passwordmatchError.classList.remove('show');
            confirmGroup.classList.add('has-error');
            valid = false;
        } else if (confirmpasswordInput.value.trim() !== passwordInput.value.trim()) {
            passwordmatchError.classList.add('show');
            confirmpasswordError.classList.remove('show');
            confirmGroup.classList.add('has-error');
            valid = false;
        } else {
            confirmpasswordError.classList.remove('show');
            passwordmatchError.classList.remove('show');
            confirmGroup.classList.remove('has-error');
        }

        if (!valid) e.preventDefault();
    });

    // ── Password Strength Meter ──
    passwordInput.addEventListener('focus', function() {
        strengthContainer.classList.add('show');
    });
    passwordInput.addEventListener('blur', function() {
        strengthContainer.classList.remove('show');
    });

    function setStrength(value) {
        strengthBar.style.width = value + '%';
    }
    function setColorAndText(color, text) {
        strengthBar.style.backgroundColor = color;
        strengthText.innerHTML = text;
        strengthText.style.color = color;
    }
    function clearStrength() {
        strengthBar.style.width = '0';
        strengthBar.style.backgroundColor = '';
        strengthText.innerHTML = '';
    }

    passwordInput.addEventListener('keyup', function() {
        var val = passwordInput.value;
        if (val === '') { clearStrength(); return; }
        if (val.match(/\s/)) { setColorAndText('#ef4444', 'Espaces non autorisés'); return; }
        if (val.match(/<|>/)) { setColorAndText('#ef4444', '< > non autorisés'); return; }

        if (val.length < 8) {
            setStrength(20);
            setColorAndText('#ef4444', 'Faible');
        } else {
            var lower = val.match(/[a-z]/);
            var upper = val.match(/[A-Z]/);
            var nums = val.match(/[0-9]/);

            if (lower && upper && nums && val.length > 11) {
                setStrength(100);
                setColorAndText('#22c55e', 'Très fort');
            } else if (lower && upper && nums && val.length >= 10) {
                setStrength(80);
                setColorAndText('#088f08', 'Fort');
            } else if (lower && upper && nums) {
                setStrength(60);
                setColorAndText('#f97316', 'Moyen');
            } else {
                setStrength(40);
                setColorAndText('#ef4444', 'Faible');
            }
        }
    });

});
</script>

</body>
</html>
