<body>

<div class="bg-video">
    <video autoplay loop muted playsinline>
        <source src="{{ asset('assets/images/index/header-video.mp4') }}" type="video/mp4">
    </video>
    <div class="overlay"></div>
</div>

<div class="login-page">
    <div class="login-card">

        <div class="login-header">
            <div class="icon-circle">
                <i class="fa fa-lock" style="color:#fff"></i>
            </div>
            <h2>Code de validation</h2>
            <p>Entrez le code de vérification que nous vous avons envoyé</p>
        </div>

        <form id="otpForm" action="{{ path('app_otpVerfication') }}" method="POST" novalidate>

            {% if error is defined and error %}
                <div style="display:flex;align-items:center;gap:6px;margin-bottom:18px;padding:7px 10px;border-radius:8px;background:rgba(239,68,68,0.1);border:1px solid rgba(239,68,68,0.2);justify-content:center;">
                    <i class="fa fa-exclamation-triangle" style="color:#f87171;font-size:0.72rem;"></i>
                    <span style="color:#fca5a5;font-size:0.78rem;line-height:1.4;">{{ error }}</span>
                </div>
            {% endif %}

            <div class="otp-container">
                <input maxlength="1" type="text" class="otp-input" id="otp-input1" name="otp1" autofocus>
                <input maxlength="1" type="text" class="otp-input" id="otp-input2" name="otp2">
                <input maxlength="1" type="text" class="otp-input" id="otp-input3" name="otp3">
                <input maxlength="1" type="text" class="otp-input" id="otp-input4" name="otp4">
            </div>

            <div class="field-error" id="otpError">
                <i class="fa fa-exclamation-triangle"></i>
                <span>Veuillez remplir tous les champs du code.</span>
            </div>

            <button type="submit" class="btn-login">
                <i class="fa fa-check-circle" style="margin-right:6px"></i> Vérifier
            </button>
        </form>

        <div class="login-footer">
            <span>Vous n'avez pas reçu le code ?</span>
            <a href="{{ path('app_resend_otp') }}" class="resend-link">Renvoyer</a>
        </div>

    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var otpForm = document.getElementById('otpForm');
        var inputs = otpForm.querySelectorAll('.otp-input');
        var otpError = document.getElementById('otpError');

        // Auto-focus next input on typing
        inputs.forEach(function(input, index) {
            input.addEventListener('input', function() {
                this.classList.remove('error');
                otpError.classList.remove('show');

                if (this.value.length >= this.maxLength && index < inputs.length - 1) {
                    inputs[index + 1].focus();
                }
            });

            // Handle backspace to go to previous input
            input.addEventListener('keydown', function(e) {
                if (e.key === 'Backspace' && !this.value && index > 0) {
                    inputs[index - 1].focus();
                }
            });

            // Allow only digits
            input.addEventListener('input', function() {
                this.value = this.value.replace(/[^0-9]/g, '');
            });
        });

        // Form validation
        otpForm.addEventListener('submit', function(event) {
            var isValid = true;

            inputs.forEach(function(input) {
                if (!input.value) {
                    isValid = false;
                    input.classList.add('error');
                    input.animate([
                        { transform: 'translateX(-5px)' },
                        { transform: 'translateX(5px)' },
                        { transform: 'translateX(-5px)' },
                        { transform: 'translateX(5px)' },
                        { transform: 'translateX(0px)' }
                    ], { duration: 400, iterations: 1 });
                } else {
                    input.classList.remove('error');
                }
            });

            if (!isValid) {
                otpError.classList.add('show');
                event.preventDefault();
            }
        });
    });
</script>

</body>
