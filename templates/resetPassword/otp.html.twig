        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Inter', sans-serif;
            overflow-x: hidden;
        }

        /* ── VIDEO BG ── */
        .bg-video {
            position: fixed;
            inset: 0;
            z-index: 0;
        }
        .bg-video video {
            width: 100%; height: 100%;
            object-fit: cover;
        }
        .bg-video .overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(160deg, rgba(16,10,46,0.88) 0%, rgba(30,10,60,0.92) 100%);
