        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 32px rgba(124,58,237,0.35);
        }
        .btn-login:active {
            transform: translateY(0);
        }

        /* ── RESEND ── */
        .login-footer {
            text-align: center;
            margin-top: 20px;
            font-size: 0.84rem;
            color: rgba(255,255,255,0.5);
        }
        .login-footer .resend-link {
            color: #c084fc;
            text-decoration: none;
            font-weight: 500;
            cursor: pointer;
            transition: color 0.2s;
        }
        .login-footer .resend-link:hover {
            color: #e9d5ff;
        }

        /* ── RESPONSIVE ── */
