{% extends 'base.html.twig' %}

{% block title %}Accueil | ClutchX
{% endblock %}

{% block body %}

	<!-- ===== HERO ===== -->
	<div>
		<div class="hero_main">
			<video class="video" autoplay loop muted data-aos="fade" data-aos-delay="150">
				<source src="assets/images/index/header-video.mp4" type="video/mp4">
			</video>
		</div>
		<div class="overlay">
			<div class="header-content">
				<section id="hero">
					<div class="container">
						<div class="row justify-content-center">
							<div class="col-lg-11 col-md-12 text-center" data-aos="fade" data-aos-delay="200">
								<div>
									<h2>Au-delà de l'écran. Maîtrisez votre Multivers.</h2>
									<h4>LIBÉREZ LE CHAMPION QUI EST EN VOUS</h4>
									<div class="d-flex justify-content-center gap-4">
										{% if app.user %}
										{% else %}
										<div class="dropdown-btn">
												<button class="btnTwoActive">Devenir Membre</button>
												<div class="dropdown-content">
													<a href="signup_player">Joueur</a>
													<a href="signup_coach">Coach</a>
												</div>
											</div>
										{% endif %}
										<a href="contact.html" class="btnTwo">Contactez-nous</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</section>

				<!-- ===== PARTNER ===== -->
				<section id="partner">
					<div class="container">
						<div class="row align-items-center">
							<div class="col-md-3 col-sm-3 col-5">
								<div>
									<h5>Nos Partenaires :</h5>
								</div>
							</div>
							<div class="col-md-9 col-sm-9 col-7">
								<div>
									<div class="partner-slider d-flex justify-content-between align-items-center">
										<figure><img src="assets/images/index/logo_1.png" alt="logoipsumImg">
										</figure>
										<figure><img src="assets/images/index/logo_2.svg" alt="logoipsumImg">
										</figure>
										<figure><img src="assets/images/index/logo_3.svg" alt="logoipsumImg">
										</figure>
										<figure><img src="assets/images/index/logo_4.svg" alt="logoipsumImg">
										</figure>
										<figure><img src="assets/images/index/logo_5.svg" alt="logoipsumImg">
										</figure>
										<figure><img src="assets/images/index/logo_6.svg" alt="logoipsumImg">
										</figure>
									</div>
								</div>
							</div>
						</div>
					</div>
				</section>


				
				<style>
					/* Dropdown sur hover */
					.dropdown-btn {
						position: relative;
						display: inline-block;
					}

					.dropdown-btn .dropdown-content {
						display: none;
						position: absolute;
						top: 100%; /* juste en dessous du bouton */
						left: 0;
						background-color: rgba(0, 0, 0, 0.9);
						min-width: 160px;
						border-radius: 5px;
						overflow: hidden;
						z-index: 10;
						text-align: center;
					}

					.dropdown-btn .dropdown-content a {
						display: block;
						padding: 10px;
						color: white;
						text-decoration: none;
					}

					.dropdown-btn .dropdown-content a:hover {
						background-color: #ff6b6b;
					}

					.dropdown-btn:hover .dropdown-content {
						display: block;
					}
				</style>


			{% endblock %}
