{% extends 'base.html.twig' %}
{% block title %}Home | ClutchX{% endblock %}

{% block body %}

<!-- ================= HERO ARENA ================= -->
<section class="hero-arena">

    <video class="hero-video" autoplay muted loop playsinline>
        <source src="{{ asset('assets/images/index/header-video.mp4') }}" type="video/mp4">
    </video>

    <div class="hero-overlay"></div>

    <div class="hero-content container text-center">

        <h1 class="hero-title">
            Beyond the Screen
            <span>Master Your Multiverse</span>
        </h1>

        <p class="hero-sub">
            Join teams • Compete in tournaments • Track stats • Become a champion
        </p>

        <div class="hero-actions">

            <!-- Dropdown -->
            <div class="cta-dropdown">
                <button class="cta-main">
                    Become a Member
                    <i class="fa-solid fa-chevron-down"></i>
                </button>

                <div class="cta-menu">
                    <a href="{{ path('signup_player') }}">
                        <i class="fa-solid fa-gamepad"></i> Player
                    </a>
                    <a href="{{ path('signup_coach') }}">
                        <i class="fa-solid fa-chalkboard-user"></i> Coach
                    </a>
                </div>
            </div>

            <a href="#" class="cta-secondary">Contact Us</a>

        </div>
    </div>
</section>


<!-- ================= PARTNERS ================= -->
<section class="partners">
    <div class="container">
        <h4 class="section-title">Trusted By</h4>

        <div class="partner-logos">
            <img src="{{ asset('assets/images/index/logo_1.png') }}">
            <img src="{{ asset('assets/images/index/logo_2.svg') }}">
            <img src="{{ asset('assets/images/index/logo_3.svg') }}">
        </div>
    </div>
</section>


<!-- ================= TESTIMONIALS ================= -->
<section class="testimonials">
    <div class="container text-center">

        <h3 class="section-title">What Gamers Say</h3>

        <div class="testimonial-grid">

            <div class="testimonial-card">
                <p>"Best gaming platform I’ve ever used."</p>
                <span>— Hector Salamanca</span>
            </div>

            <div class="testimonial-card">
                <p>"Finally a place to manage my team easily."</p>
                <span>— Steve Burr</span>
            </div>

        </div>
    </div>
</section>


<!-- ================= FAQ ================= -->
<section class="faq-section">
    <div class="container">

        <h3 class="section-title text-center">Frequently Asked Questions</h3>

        <div class="faq-item">
            <button class="faq-btn">
                What does ClutchX offer?
                <i class="fa-solid fa-angle-down"></i>
            </button>
            <div class="faq-content">
                Tournaments, team management, match tracking, player statistics and coaching tools.
            </div>
        </div>

        <div class="faq-item">
            <button class="faq-btn">
                Is the platform free?
                <i class="fa-solid fa-angle-down"></i>
            </button>
            <div class="faq-content">
                Yes. Players and teams can join and compete for free.
            </div>
        </div>

    </div>
</section>


<!-- ================= CSS ================= -->
<style>

/* HERO */
.hero-arena{
    position:relative;
    height:92vh;
    display:flex;
    align-items:center;
    justify-content:center;
    overflow:hidden;
}

.hero-video{
    position:absolute;
    width:100%;
    height:100%;
    object-fit:cover;
    filter:brightness(.35) contrast(1.2);
}

.hero-overlay{
    position:absolute;
    inset:0;
    background:
        radial-gradient(circle at center,rgba(139,92,246,.25),transparent 60%),
        linear-gradient(to bottom,rgba(2,6,23,.6),#020617);
}

.hero-content{position:relative; z-index:2;}

.hero-title{
    font-size:64px;
    font-weight:900;
    color:white;
    line-height:1.1;
}
.hero-title span{
    display:block;
    background:linear-gradient(90deg,#8b5cf6,#ec4899);
    -webkit-background-clip:text;
    color:transparent;
}

.hero-sub{
    margin-top:18px;
    font-size:20px;
    color:#cbd5e1;
}

/* CTA */
.hero-actions{margin-top:35px;display:flex;gap:20px;justify-content:center;flex-wrap:wrap;}

.cta-main{
    padding:14px 28px;
    border-radius:14px;
    background:linear-gradient(135deg,#8b5cf6,#ec4899);
    border:none;color:white;font-weight:700;
    box-shadow:0 15px 40px rgba(139,92,246,.5);
}

.cta-secondary{
    padding:14px 28px;border-radius:14px;border:1px solid #8b5cf6;color:#e5e7eb;
}

/* dropdown */
.cta-dropdown{position:relative;}
.cta-menu{
    position:absolute;
    top:120%;
    left:0;
    width:220px;
    background:#020617;
    border:1px solid rgba(255,255,255,.1);
    border-radius:14px;
    opacity:0;
    transform:translateY(10px);
    transition:.25s;
    pointer-events:none;
}
.cta-dropdown:hover .cta-menu{opacity:1;transform:translateY(0);pointer-events:auto;}
.cta-menu a{display:block;padding:14px;color:#e5e7eb;text-decoration:none;}
.cta-menu a:hover{background:#8b5cf6}

/* sections */
.section-title{
    margin:70px 0 25px;
    font-weight:800;
    text-align:center;
    color:#e5e7eb;
}

/* partners */
.partner-logos{
    display:flex;
    justify-content:center;
    gap:60px;
    opacity:.8;
    flex-wrap:wrap;
}
.partner-logos img{height:50px;filter:grayscale(1);transition:.3s;}
.partner-logos img:hover{filter:none;transform:scale(1.1);}

/* testimonials */
.testimonial-grid{
    display:grid;
    grid-template-columns:repeat(auto-fit,minmax(280px,1fr));
    gap:25px;
}
.testimonial-card{
    background:#020617;
    padding:25px;
    border-radius:14px;
    border:1px solid rgba(255,255,255,.08);
}
.testimonial-card span{color:#8b5cf6;font-weight:600;}

/* FAQ */
.faq-item{margin-bottom:12px;}
.faq-btn{
    width:100%;
    background:#020617;
    border:1px solid rgba(255,255,255,.1);
    padding:16px;
    color:#e5e7eb;
    border-radius:12px;
    display:flex;
    justify-content:space-between;
}
.faq-content{
    display:none;
    padding:15px;
    background:#020617;
    border:1px solid rgba(255,255,255,.06);
    border-top:none;
}
.faq-item.active .faq-content{display:block;}

@media(max-width:768px){
    .hero-title{font-size:38px;}
    .hero-sub{font-size:16px;}
}

</style>


<!-- ================= JS ================= -->
<script>
document.querySelectorAll(".faq-btn").forEach(btn=>{
    btn.addEventListener("click",()=>{
        btn.parentElement.classList.toggle("active");
    });
});
</script>

{% endblock %}
